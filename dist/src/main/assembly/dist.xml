<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>dist</id>

  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>robovm-${project.version}</baseDirectory>

  <fileSets>
    <fileSet>
      <directory>${basedir}/../vm/binaries</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <directoryMode>755</directoryMode>
      <fileMode>644</fileMode>
      <outputDirectory>lib/vm</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../bin</directory>
      <includes>
        <include>*</include>
      </includes>
      <fileMode>755</fileMode>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../compiler</directory>
      <outputDirectory>license/compiler</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../cocoatouch</directory>
      <outputDirectory>license/cocoatouch</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../objc</directory>
      <outputDirectory>license/objc</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../rt</directory>
      <outputDirectory>license/rt</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../vm</directory>
      <outputDirectory>license/vm</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:*:jar:*</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <fileMode>644</fileMode>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>*:*:*:sources</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.classifier}.${artifact.extension}</outputFileNameMapping>
      <fileMode>644</fileMode>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>
  </dependencySets>
</assembly>
